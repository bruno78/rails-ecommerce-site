<h1>Update your card</h1>

<!--form action="form_tag subscription_path" method="POST" id="payment-form"-->
  <%= form_tag subscription_path, method: :put, id: "payment-form" do %>
    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number" value="4242 4242 4242 4242">
      </label>
    </div>

    <div class="form-group">
      <label>
        <span>Expiration (MM/YY)</span>
        <input type="text" size="2" data-stripe="exp_month" value="12">
      </label>
      <span> / </span>
      <input type="text" size="2" data-stripe="exp_year" value="20">
    </div>

    <div class="form-group">
      <label>
        <span>CVC</span>
        <input class="form-control" type="text" size="4" data-stripe="cvc" value="123">
      </label>
    </div>
    <%= hidden_field_tag :plan, params[:plan] %>
    <input type="submit" class="btn btn-primary submit" value="Update">
  <!--/form-->
<% end %>
